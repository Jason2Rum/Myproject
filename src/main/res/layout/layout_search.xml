<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/tl_search"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/search_picture"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/search_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:fontFamily="@font/textsize"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/search_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/button_color"
            android:textSize="15sp"
            android:fontFamily="@font/textsize"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/search_number"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="10sp"
            android:fontFamily="@font/textsize"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/search_state"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/stateshape"
            android:gravity="center"
            android:textColor="@color/button_color"
            android:textSize="15sp" />
    </LinearLayout>


</TableLayout>