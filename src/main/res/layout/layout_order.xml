<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:background="@drawable/cardlist2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/timepng"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/time" />
            </LinearLayout>

            <TextView
                android:id="@+id/timedate"
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pingfang"
                android:gravity="center_vertical"
                android:text="2019-03-08"
                android:textColor="#797979" />

            <TextView
                android:id="@+id/timeclock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pingfang"
                android:gravity="center"
                android:text="21:43"
                android:textColor="#797979" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/productpng"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/product" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="140dp"
                    android:layout_height="33dp"
                    android:fontFamily="@font/pingfang"
                    android:gravity="center_vertical"
                    android:text="1982年的猕猴桃"
                    android:textColor="#797979"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/productnum"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pingfang"
                    android:text="数量：1"
                    android:textColor="#797979"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pricebefore"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:fontFamily="@font/pingfang"
                    android:gravity="center"
                    android:text="原价：¥188"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pricenow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pingfang"
                    android:text="竞拍价：¥9.9"
                    android:textColor="#B52500" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gotopay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pingfang"
                android:gravity="center"
                android:text="等待您的付款"
                android:textColor="#B52500"
                android:textSize="12sp" />

            <Button
                android:id="@+id/radioButton_exit"
                android:layout_width="18dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/buttonbackground"
                android:button="@null"
                android:fontFamily="@font/pingfang"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="#797979"
                android:textSize="12sp" />

            <Button
                android:id="@+id/radioButton_topay"
                android:layout_width="18dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/buttonbackgroundred"
                android:button="@null"
                android:fontFamily="@font/pingfang"
                android:gravity="center"
                android:text="去支付 "
                android:textColor="#B52500"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>